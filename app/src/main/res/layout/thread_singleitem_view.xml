<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="2dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tvThreadId"
            android:text="ID: 120"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tvThreadDate"
            android:text="18:06:00 Aug 28 2023"
            android:textSize="14sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:id="@+id/tvThreadBody"
            android:autoLink="all"
            android:maxLines="3"
            android:text="Hey Can You Please Help Me With This"
            android:textSize="16sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:id="@+id/tvThreadSender"
            android:text="Mr. Shubhasai"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_marginTop="20dp"
            android:background="@drawable/rectangular_button"
            android:layout_width="wrap_content"
            android:id="@+id/btnReply"
            android:textStyle="bold"
            android:textColor="?attr/colorSecondary"
            android:text="Reply"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>